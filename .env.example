# Redpanda Cloud Credentials
REDPANDA_CLIENT_ID=your_client_id_here
REDPANDA_CLIENT_SECRET=your_client_secret_here
REDPANDA_CLOUD_ENVIRONMENT=pre

# Test Configuration
TIMEOUT=6h
CLOUD_PROVIDER=aws
TEST_TYPE=cluster
DATASOURCE_TEST_DIR=standard

# Terraform Configuration
TF_LOG=WARN
PROVIDER_VERSION=0.7.1

# Build Configuration
GOBIN=./tools

# Google Cloud (for GCP tests)
GOOGLE_CREDENTIALS_BASE64=your_base64_encoded_credentials

# Optional: Override default test cluster configuration
PREFIX=tfrp-local
DATASOURCE_CLUSTER_ID=your_existing_cluster_id

# Release Configuration (for creating releases with goreleaser)
GPG_PRIVATE_KEY=your_base64_encoded_gpg_private_key
PASSPHRASE=your_gpg_key_passphrase
GPG_FINGERPRINT=your_gpg_key_fingerprint